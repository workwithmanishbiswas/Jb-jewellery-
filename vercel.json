{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app.py"
    },
    {
      "src": "/frontend/js/(.*)",
      "dest": "/frontend/js/$1"
    },
    {
      "src": "/frontend/css/(.*)",
      "dest": "/frontend/css/$1"
    },
    {
      "src": "/frontend/pages/(.*)",
      "dest": "/frontend/pages/$1"
    },
    {
      "src": "/(.*\\.html)$",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}
