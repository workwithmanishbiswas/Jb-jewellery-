{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app.py"
    },
    {
      "src": "/frontend/js/(.*)",
      "dest": "/frontend/js/$1"
    },
    {
      "src": "/frontend/css/(.*)",
      "dest": "/frontend/css/$1"
    },
    {
      "src": "/frontend/pages/(.*)",
      "dest": "/frontend/pages/$1"
    },
    {
      "src": "/(.*\\.html)$",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ],
  "env": {
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_KEY": "@supabase_key",
    "JWT_SECRET": "@jwt_secret",
    "CASHFREE_KEY_ID": "@cashfree_key_id",
    "CASHFREE_KEY_SECRET": "@cashfree_key_secret",
    "ZOHO_MAIL_USER": "@zoho_mail_user",
    "ZOHO_MAIL_PASSWORD": "@zoho_mail_password"
  }
}
