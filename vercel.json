{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/css",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/js",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/images",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/css/(.*)",
      "dest": "frontend/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "frontend/js/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "frontend/images/$1"
    },
    {
      "src": "/(index\\.html)?$",
      "dest": "frontend/index.html"
    },
    {
      "src": "/([^.]+)(\\.html)?$",
      "dest": "frontend/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
